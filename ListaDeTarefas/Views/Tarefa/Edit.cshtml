@model ListaDeTarefas.Models.Tarefa

@{
    ViewBag.Title = "Editar Tarefa";
}

<h2>Editar Tarefa</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Tarefa</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.TarefaId)

        <div class="form-group">
            <div class=" control-label col-md-2"><b>Nome da Tarefa</b></div> 
            @*Html.LabelFor(model => model.Nome, new { @class = "control-label col-md-2" })*@
            <div class="col-md-10">
                @Html.EditorFor(model => model.Nome)
                @Html.ValidationMessageFor(model => model.Nome)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Concluida, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Concluida)
                @Html.ValidationMessageFor(model => model.Concluida)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Ativa, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Ativa)
                @Html.ValidationMessageFor(model => model.Ativa)
            </div>
        </div>

        <div class="form-group">
            <div class=" control-label col-md-2"><b>Lista Correspondente</b></div> 
            @*Html.LabelFor(model => model.ListaId, "ListaId", new { @class = "control-label col-md-2" })*@
            <div class="col-md-10">
                @Html.DropDownList("ListaId", String.Empty)
                @Html.ValidationMessageFor(model => model.ListaId)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Salvar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Volar para Lista", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
